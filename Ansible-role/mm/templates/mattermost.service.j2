
[Unit]
Description=Mattermost
After=network.target

[Service]
Type=notify
ExecStart=/opt/mattermost/current/bin/mattermost
TimeoutStartSec=3600
KillMode=mixed
Restart=always
RestartSec=10
WorkingDirectory=/opt/mattermost/current/bin
User={{ mattermost_user }}
Group={{ mattermost_user }}
LimitNOFILE=49152

[Install]
WantedBy=multi-user.target